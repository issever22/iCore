    <!-- Custom Tab Layout styles -->
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/c_surface_container_lowest</item>
        <item name="tabSelectedTextAppearance">@style/CustomTabSelectedText</item>
        <item name="tabTextAppearance">@style/CustomTabUnselectedText</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomTabSelectedText" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/c_midnight</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/outfit_semi_bold</item>
